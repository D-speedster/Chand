style.


  :root {
              --primary: #e62d2d;
              --primary-light: #ff4949;
              --secondary: #4caf50;
              --dark: #333;
              --light: #f8f8f8;
              --gray: #eee;
              --shadow: 0 4px 12px rgba(0,0,0,0.1);
          }
       | @font-face { font-family: 'Vazirmatn'; src: url('/fonts/Vazir/Vazir.woff2') format('woff2'); font-weight: normal; font-style: normal; } @font-face { font-family: 'Vazirmatn'; src: url('/fonts/Vazir/Vazir-Bold.woff2') format('woff2'); font-weight: bold; font-style: normal; }
          * {
              margin: 0;
              padding: 0;
              box-sizing: border-box;
              font-family: 'Vazirmatn';
          }
          
          body {
              background-color: white;
              color: var(--dark);
              min-height: 100vh;
              display: flex;
              flex-direction: column;
          }
          
          .container {
              max-width: 1200px;
              margin: 0 auto;
              padding: 0 15px;
              width: 100%;
          }
          
          /* Header Styles - Minimal */
          header {
              padding: 15px 0;
          }
          
          .top-header {
              display: flex;
              justify-content: space-between;
              align-items: center;
          }
          
          .logo {
              display: flex;
              align-items: center;
          }
          
          .logo img {
              height: 40px;
          }
          
          .auth-buttons {
              display: flex;
              gap: 10px;
          }
          
          .auth-buttons button {
              padding: 8px 16px;
              border-radius: 20px;
              border: none;
              cursor: pointer;
              transition: all 0.3s ease;
              font-size: 0.9rem;
          }
          
          .login-btn {
              background-color: white;
              color: var(--primary);
              border: 1px solid var(--primary) !important;
          }
          
          .signup-btn {
              background-color: var(--primary);
              color: white;
          }
          
          .auth-buttons button:hover {
              transform: translateY(-2px);
              box-shadow: 0 4px 8px rgba(0,0,0,0.1);
          }
          
          /* Main Search Section */
          .search-section {
              display: flex;
              flex-direction: column;
              align-items: center;
              justify-content: center;
              padding: 120px 0;
              flex-grow: 1;
          }
          
          .search-logo {
              margin-bottom: 30px;
              transition: all 0.3s ease;
          }
          
          .search-logo img {
              height: 80px;
          }
          
          .search-container {
              position: relative;
              width: 100%;
              max-width: 600px;
              margin-bottom: 20px;
          }
          
          .search-box {
              width: 100%;
              padding: 18px 25px;
              border: none;
              border-radius: 30px;
              font-size: 1.1rem;
              box-shadow: 0 2px 15px rgba(0,0,0,0.1);
              transition: all 0.3s ease;
              text-align: right;
          }
          
          .search-box:focus {
              outline: none;
              box-shadow: 0 4px 20px rgba(0,0,0,0.15);
          }
          
          .search-btn {
              position: absolute;
              left: 10px;
              top: 50%;
              transform: translateY(-50%);
              background-color: var(--primary);
              color: white;
              border: none;
              width: 45px;
              height: 45px;
              border-radius: 50%;
              cursor: pointer;
              transition: all 0.3s ease;
              display: flex;
              align-items: center;
              justify-content: center;
          }
          
          .search-btn:hover {
              background-color: var(--primary-light);
              transform: translateY(-50%) scale(1.05);
          }
          
          .search-options {
              display: flex;
              gap: 15px;
              margin-top: 5px;
          }
          
          .search-option {
              display: flex;
              align-items: center;
              padding: 8px 15px;
              background-color: var(--light);
              border-radius: 20px;
              font-size: 0.85rem;
              color: #666;
              cursor: pointer;
              transition: all 0.3s ease;
          }
          
          .search-option:hover {
              background-color: var(--gray);
          }
          
          .search-option.active {
              background-color: rgba(230, 45, 45, 0.1);
              color: var(--primary);
          }
          
          .search-option svg {
              margin-left: 5px;
              width: 16px;
              height: 16px;
          }
          
          .search-tagline {
              margin-top: 15px;
              color: #666;
              font-size: 0.9rem;
              text-align: center;
          }
          
          /* Popular Search Terms */
          .popular-terms {
              margin-top: 40px;
              text-align: center;
          }
          
          .popular-terms h3 {
              font-size: 1rem;
              color: #666;
              margin-bottom: 15px;
              font-weight: normal;
          }
          
          .terms-container {
              display: flex;
              flex-wrap: wrap;
              justify-content: center;
              gap: 10px;
          }
          
          .term-badge {
              padding: 8px 15px;
              background-color: white;
              border: 1px solid #ddd;
              border-radius: 20px;
              font-size: 0.85rem;
              color: #555;
              cursor: pointer;
              transition: all 0.3s ease;
          }
          
          .term-badge:hover {
              border-color: var(--primary);
              color: var(--primary);
              transform: translateY(-2px);
              box-shadow: 0 4px 8px rgba(0,0,0,0.05);
          }
          
          /* Footer - Minimal */
          footer {
              padding: 20px 0;
              background-color: var(--light);
              margin-top: auto;
          }
          
          .footer-container {
              display: flex;
              justify-content: space-between;
              align-items: center;
          }
          
          .footer-links {
              display: flex;
              gap: 20px;
          }
          
          .footer-links a {
              color: #666;
              text-decoration: none;
              font-size: 0.9rem;
              transition: color 0.3s ease;
          }
          
          .footer-links a:hover {
              color: var(--primary);
          }
          
          .copyright {
              color: #888;
              font-size: 0.85rem;
          }
          
          /* Responsive */
          @media (max-width: 768px) {
              .search-section {
                  padding: 80px 0;
              }
              
              .search-logo img {
                  height: 60px;
              }
              
              .footer-container {
                  flex-direction: column;
                  gap: 15px;
              }
          }
          
          @media (max-width: 480px) {
              .auth-buttons button {
                  padding: 6px 12px;
                  font-size: 0.8rem;
              }
              
              .search-section {
                  padding: 60px 0;
              }
              
              .search-logo img {
                  height: 50px;
              }
              
              .search-box {
                  padding: 15px 20px;
                  font-size: 1rem;
              }
              
              .search-btn {
                  width: 40px;
                  height: 40px;
              }
          }
  
